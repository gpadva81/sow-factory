# ─── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://sowfactory:sowfactory_dev@localhost:5432/sowfactory"

# ─── NextAuth ──────────────────────────────────────────────────────────────────
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-openssl-rand-base64-32-output"

# ─── Microsoft Entra ID (Azure AD) ─────────────────────────────────────────────
# App registration used for BOTH user sign-in (OAuth) AND Graph API (client creds)
AZURE_TENANT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
AZURE_CLIENT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
AZURE_CLIENT_SECRET="your-azure-client-secret"

# ─── SharePoint / Microsoft Graph ──────────────────────────────────────────────
# The specific site the app is allowed to read/write (Sites.Selected permission)
SHAREPOINT_SITE_ID="your-sharepoint-site-id"
SHAREPOINT_DRIVE_ID="your-sharepoint-drive-id"

# Set to "true" to skip real Graph calls and use mocked responses (no Azure needed)
MOCK_SHAREPOINT="true"

# ─── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4o"

# ─── Autotask / Datto PSA (Phase 2) ────────────────────────────────────────────
AUTOTASK_BASE_URL="https://webservices1.autotask.net/ATServicesRest/V1.0"
AUTOTASK_USERNAME="api-user@company.com"
AUTOTASK_SECRET="your-autotask-api-secret"
AUTOTASK_INTEGRATION_CODE="your-integration-code"

# ─── Observability ─────────────────────────────────────────────────────────────
LOG_LEVEL="info"

# ─── Rate Limiting ─────────────────────────────────────────────────────────────
# Max SOW generations per user per minute
GENERATE_RATE_LIMIT="10"

# ─── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://sowfactory:sowfactory_dev@localhost:5432/sowfactory"

# ─── NextAuth ──────────────────────────────────────────────────────────────────
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-openssl-rand-base64-32-output"

# ─── Credential encryption ─────────────────────────────────────────────────────
# Used to encrypt Azure / OpenAI secrets stored in the database.
# Generate with: openssl rand -hex 32
# If omitted, derived from NEXTAUTH_SECRET (acceptable for dev, not recommended for prod).
ENCRYPTION_KEY=""

# ─── OpenAI (optional – can also be set via the Settings UI) ───────────────────
# Leave blank to configure through the in-app Settings page instead.
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o"

# ─── SharePoint mock mode ───────────────────────────────────────────────────────
# Set to "true" to skip real SharePoint and return mock links.
# Azure credentials below are only needed when this is "false".
MOCK_SHAREPOINT="true"

# ─── Azure credentials (optional – can also be set via the Settings UI) ────────
# These are used for Microsoft Graph / SharePoint access ONLY.
# Sign-in does NOT require Azure – it uses email/password.
# Leave blank and configure through Settings → Microsoft Azure & SharePoint.
AZURE_TENANT_ID=""
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
SHAREPOINT_SITE_ID=""
SHAREPOINT_DRIVE_ID=""

# ─── Autotask / Datto PSA (Phase 2) ────────────────────────────────────────────
AUTOTASK_BASE_URL="https://webservices1.autotask.net/ATServicesRest/V1.0"
AUTOTASK_USERNAME=""
AUTOTASK_SECRET=""
AUTOTASK_INTEGRATION_CODE=""

# ─── Observability ─────────────────────────────────────────────────────────────
LOG_LEVEL="info"
GENERATE_RATE_LIMIT="10"

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ─────────────────────────────────────────────────────────────────────

enum Role {
  ADMIN
  MEMBER
}

enum SOWStatus {
  PENDING
  GENERATING
  MERGING
  UPLOADING
  COMPLETE
  FAILED
}

// ─── NextAuth required tables ──────────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Application tables ────────────────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(MEMBER)
  createdAt     DateTime  @default(now())

  accounts  Account[]
  sessions  Session[]
  templates Template[]
  sows      SOW[]
  logs      Log[]
}

model Template {
  id                String   @id @default(cuid())
  name              String
  description       String?
  sharepointFileId  String
  sharepointSiteId  String
  sharepointDriveId String
  outputFolderId    String
  intakeSchemaJson  Json
  active            Boolean  @default(true)
  createdById       String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  createdBy User  @relation(fields: [createdById], references: [id])
  sows      SOW[]
}

model SOW {
  id               String    @id @default(cuid())
  templateId       String
  createdById      String
  sharepointFileId String?
  sharepointWebUrl String?
  inputJson        Json
  llmOutputJson    Json?
  status           SOWStatus @default(PENDING)
  errorMessage     String?
  requestId        String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  template  Template @relation(fields: [templateId], references: [id])
  createdBy User     @relation(fields: [createdById], references: [id])
  logs      Log[]
}

model Log {
  id           String   @id @default(cuid())
  actorUserId  String?
  action       String
  entityType   String?
  entityId     String?
  metadataJson Json?
  requestId    String?
  createdAt    DateTime @default(now())

  actor User? @relation(fields: [actorUserId], references: [id])
  sow   SOW?  @relation(fields: [entityId], references: [id])
}

/// Placeholder registry for external service credentials.
/// For MVP the actual secrets live in env vars; this table records
/// which env key to look up so an admin can audit what's configured.
model IntegrationSecretRef {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  envKey      String
  createdAt   DateTime @default(now())
}
